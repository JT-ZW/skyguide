# Groq API Key (Required)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Tavily API Key (Optional - enables web search for general questions)
# Get your key from: https://tavily.com
# Without this, the bot will gracefully handle general questions but won't search the web
TAVILY_API_KEY=your_tavily_api_key_here

# Cohere API Key (Required for embeddings in ChromaDB)
# Get your FREE key from: https://dashboard.cohere.com/api-keys
# Free tier: 1000 API calls per minute - no credit card required!
COHERE_API_KEY=your_cohere_api_key_here

# ChromaDB Cloud Configuration (Required for production)
# Get your credentials from: https://www.trychroma.com/
CHROMA_API_KEY=your_chromadb_api_key
CHROMA_TENANT=your_chromadb_tenant_id
CHROMA_DATABASE=your_database_name
